class Robot

  def head
    @head
  end

  def arms=(value)
    @arms = value
  end

  attr_accessor :legs, :body

  attr_writer :eyes :arms

  attr_reader :feet

  def assemble
    @legs = "RubyTek Walkers"
    @body = "BurlyBot Frame"
    @feet = "SuperAI 9000"
  end

  def diagnostic
    puts @arms
    puts @eyes
  end

end

robot = Robot.new

robot.assemble

robot.arms = "MagGrip Claws"
robot.eyes = "X-Ray Scopes"
robot.feet = "MagGrip Boots"

puts robot.head
puts robot.legs
puts robot.body
puts robot.feet
robot.diagnostic

  
